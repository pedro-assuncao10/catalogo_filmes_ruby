<h1 class="page-title">Criar Conta</h1>

<section class="panel">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form form-compact" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="grid grid-2">
      <%# Se o seu User tem :name e já liberou no strong params do Devise, descomente:
      <div class="field span-2">
        <label class="label" for="user_name">Nome</label>
        <%= f.text_field :name, autocomplete: "name", class: "input", placeholder: "Seu nome" %>
      </div>
      %>

      <div class="field span-2">
        <label class="label" for="user_email">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="field span-2">
        <label class="label" for="user_password">Senha</label>
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <small class="muted">Mínimo de 6 caracteres.</small>
      </div>

      <div class="field span-2">
        <label class="label" for="user_password_confirmation">Confirmação de senha</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Cadastrar", class: "btn btn-brand" %>
      <%= link_to "Já tenho conta", new_session_path(resource_name), class: "btn btn-ghost" %>
    </div>
  <% end %>
</section>
