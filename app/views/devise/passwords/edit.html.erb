<h1 class="page-title">Redefinir Senha</h1>

<section class="panel">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form form-compact" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="grid grid-2">
      <div class="field span-2">
        <label class="label" for="user_password">Nova senha</label>
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <small class="muted">MÃ­nimo de 6 caracteres.</small>
      </div>

      <div class="field span-2">
        <label class="label" for="user_password_confirmation">Confirmar nova senha</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Redefinir", class: "btn btn-brand" %>
      <%= link_to "Voltar ao login", new_session_path(resource_name), class: "btn btn-ghost" %>
    </div>
  <% end %>
</section>
