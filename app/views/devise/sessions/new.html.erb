<h1 class="page-title">Entrar</h1>

<section class="panel">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form form-compact" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="grid grid-2">
      <div class="field span-2">
        <label class="label" for="user_email">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="field span-2">
        <label class="label" for="user_password">Senha</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field span-2">
          <label class="label">
            <%= f.check_box :remember_me %> Lembrar de mim
          </label>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Entrar", class: "btn btn-brand" %>
      <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "btn btn-ghost" %>
    </div>
  <% end %>
</section>

<section class="panel">
  <p class="muted">Novo por aqui?</p>
  <%= link_to "Criar conta", new_registration_path(resource_name), class: "btn btn-primary" %>
</section>
